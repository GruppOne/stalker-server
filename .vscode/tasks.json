{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run spectral lint",
      "type": "shell",
      "command": "spectral lint ./api/**.yaml",
      "problemMatcher": {
        "base": "$eslint-stylish",
        "source": "spectral"
      }
    },
    {
      "label": "run prism mock on port 11111",
      "type": "shell",
      "command": "prism mock --port 11111 --dynamic ./api/openapi.yaml ",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "build plantuml images",
      "type": "shell",
      "command": "java",
      "args": [
        "-jar",
        "${env:PLANTUML_JAR}",
        "-progress",
        "-failfast",
        "-checkmetadata",
        "-charset",
        "UTF-8",
        "-x",
        "${workspaceRoot}/docs/style/*.pu",
        "-o",
        "img",
        "${workspaceRoot}/docs/diagrams/*.pu"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "format java code continuously",
      "type": "shell",
      "command": "./gradlew spotlessApply --continuous",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "compile java code continuously",
      "type": "shell",
      "command": "./gradlew compileJava --continuous --info",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "group": "build",
      "problemMatcher": [
        // "$gradle"
      ]
    },
    {
      "label": "test java code continuously",
      "type": "shell",
      "command": "./gradlew test --continuous --info",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "group": "build",
      "problemMatcher": [
        // "$gradle"
      ]
    },
    {
      "label": "format and test java code continuously",
      "type": "shell",
      "command": "./gradlew spotlessApply test --continuous",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "./gradlew bootRun - run spring boot application",
      "type": "shell",
      "command": "./gradlew bootRun --info",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
