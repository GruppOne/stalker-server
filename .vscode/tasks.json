{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run spectral lint",
      "type": "shell",
      "command": "spectral lint ./api/**.yaml",
      "problemMatcher": {
        "base": "$eslint-stylish",
        "source": "spectral"
      }
    },
    {
      "label": "run prism mock on port 11111",
      "type": "shell",
      "command": "prism mock --port 11111 --dynamic ./api/openapi.yaml ",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "build plantuml images",
      "type": "shell",
      "command": "java",
      "args": [
        "-jar",
        "${env:PLANTUML_JAR}",
        "-progress",
        "-failfast",
        "-checkmetadata",
        "-charset",
        "UTF-8",
        "-x",
        "${workspaceRoot}/docs/style/*.pu",
        "-o",
        "img",
        "${workspaceRoot}/docs/diagrams/*.pu"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "run spring boot application (./gradlew bootRun)",
      "type": "shell",
      "command": "./gradlew bootRun --info",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "compile java continuously",
      "type": "shell",
      "command": "./gradlew compileJava --continuous --info",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "start fresh rdb and rdb-gui services",
      "type": "shell",
      "command": "docker-compose down rdb rdb-gui --remove-orphans --volumes --rmi local && docker-compose up rdb rdb-gui",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "group": "build",
      "problemMatcher": []
    }
  ]
}
